page{
  height: 100%;
}
.add-cont{
  height: 100%;
  position: relative;
}
.add__input,
.add__textarea{
  color: #000;
}

.add__input{
  font-size: 36rpx;
  padding:15rpx 20rpx;
}

.add__textarea{
  height: 340rpx;
  width: 100%;
  font-size: 30rpx;
  padding:15rpx 20rpx;
  box-sizing:border-box;
  border-bottom: 1rpx solid #999;
}

.add-form{
  border-bottom: 1rpx solid #999;
}

.add-footer{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}

.add-btn{
  display: flex;
  border-top: 1rpx solid #999;
  background: #fff;  
}
.add-btn__cancel,
.add-btn__save{
  width: 50%;
  text-align: center;
  line-height: 96rpx;
}
.add-btn__save{
  background: #00a3e7;
  color: #fff;
}

.picker{
  color: #000;
  padding: 30rpx;
}
.img-list{
  display: flex;
}
.img-item{
  display: flex;
  justify-content: center;
  width: 200rpx;
  margin-right: 30rpx;
}

.img-item-dom{
  width: 200rpx;
  height: 200rpx;
}

.img-area{
  display: flex;
  padding-left: 30rpx;
}
.add-img-btn{
  width: 200rpx;
  height: 200rpx;
  background-color: #FAFAFA;  
}
.add-icon{
  width: 200rpx;
  height: 200rpx;
  background: url("data:image/png;base64,") no-repeat center center;
}